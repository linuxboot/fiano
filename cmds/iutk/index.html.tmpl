<html>
  <head>
    <title>iUTK</title>
    <meta charset="utf-8"/>
    <style>
      html, body {
        padding: 0;
        margin: 0;
        width: 100%;
        height: 100%;
      }

      #visitors {
        overflow: auto;
        position: absolute;
        white-space: nowrap;

        width: 100%;
        height: 3em;
        top: 0;
        left: 0;
      }

      #visitors > button {
        display: inline-block;
        height: 100%;
      }

      #tree {
        overflow: auto;
        position: absolute;

        width: 60%;
        top: 3em;
        bottom: 10em;
        left: 0;
      }

      #tree .highlight {
        background-color: yellow;
      }

      #node-info-pane {
        overflow: auto;
        position: absolute;

        width: 40%;
        top: 3em;
        bottom: 10em;
        left: 60%;
      }

      #log-pane {
        overflow: auto;
        position: absolute;

        width: 100%;
        height: 10em;
        bottom: 0;
        left: 0;
      }
    </style>
  </head>
  <body>
    <div id=workspace style=display:none>
      <div id=visitors></div>
      <div id=tree></div>
      <pre id=node-info-pane></pre>
      <pre id=log-pane></pre>
    </div>

    <script>
      // Grab all the stdout and stderr from utk and convert it to HTML.
      $logPane = document.getElementById('log-pane');
      console.log = function (x) {
        $logPane.innerHTML += x + "\n";
      };
    </script>
    <script src="wasm_exec.js"></script>
    <script>
      const go = new Go();
      const wasmUrl = 'WASMURL';
      WebAssembly.instantiateStreaming(fetch(wasmUrl), go.importObject).then((result) => {
        go.run(result.instance);
      });
    </script>
  </body>
</html>
